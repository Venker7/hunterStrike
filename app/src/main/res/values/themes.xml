<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HunterStrike" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DB0D0D</item>
        <item name="colorPrimaryVariant">#DA1313</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#D91111</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#DB0C0C</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/IconOverflow</item>
    </style>
    <style name="Theme.HunterStrike.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="IconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>
    <style name="Theme.HunterStrike.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HunterStrike.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogAnimation">
        <item name="android:windowEnterTransition">@anim/slide_in_animation</item>
        <item name="android:windowExitTransition">@anim/slide_out_animation</item>

    </style>
</resources>