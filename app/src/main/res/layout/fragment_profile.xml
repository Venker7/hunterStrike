<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1ECEC"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="150dp"
        android:text="Nongmaithem Venker Singh"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:id="@+id/name"
        />


    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/text_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="25dp"
        android:textStyle="italic"
        />

 <RelativeLayout
     android:layout_width="100dp"
     android:layout_marginStart="10dp"
     android:layout_marginTop="70dp"
     android:background="@drawable/circle"
     android:layout_height="100dp" >
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile"
    android:layout_width="100dp"
    android:layout_height="100dp"

    android:background="@drawable/person"
    android:scaleType="centerCrop"/>
 </RelativeLayout>


    <Button
        android:id="@+id/edit_profile"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="#1D39E3"
        android:text="Edit Profile"
        android:textColor="#F6F5F5"
        app:cornerRadius="15dp"
        android:textAllCaps="false"
        />


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="370dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/layout_email"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:textColor="#F9F5F5"
                android:id="@+id/email_text"
                android:layout_marginLeft="80dp"
                android:textSize="10dp"
                android:gravity="center"/>


        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/layout_email"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout3"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/layout_phone_number"
            android:layout_below="@id/layout_email"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:textColor="#E8E5E5"
                android:id="@+id/phone_no."
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:gravity="center"/>


        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/layout_phone_number"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout4"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/gap_layout4"

            android:id="@+id/eligibility_layout"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onButtonClick">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eligibility"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_white"
                android:layout_marginStart="170dp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/eligibility_layout"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout1"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/compatibility_layout"
            android:layout_below="@id/gap_layout1"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compatibility"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_white"
                android:layout_marginStart="133dp"
                android:layout_marginTop="3dp"/>


        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/compatibility_layout"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout2"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/blood_facts_layout"
            android:layout_below="@id/gap_layout2"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Facts"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward_white"
                android:layout_marginStart="145dp"
                android:layout_marginTop="3dp"/>


        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/blood_facts_layout"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout5"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/logout_layout"
            android:layout_below="@id/gap_layout5">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/logout_white" />

        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="300dp"
            android:layout_below="@id/logout_layout"
            android:background="@color/black"
            android:layout_centerHorizontal="true"
            android:id="@+id/gap_layout6"
            android:layout_height="1dp"/>

    </RelativeLayout>




</RelativeLayout>